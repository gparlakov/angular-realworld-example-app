{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/pusher-js"
    ],
    "types": [
      "jest", "pusher-js"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./cypress/**/*.*"]
}
